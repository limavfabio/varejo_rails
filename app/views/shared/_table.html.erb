<%# locals: (table_frame_id:) -%>
<%= turbo_frame_tag table_frame_id, target:"_top" do %>
  <%# The bang on class custom-height-table is to prevent it from applying %>
  <div class=" table-responsive rounded-bottom !custom-height-table">
    <table class="table table-hover m-0">
      <thead>
        <tr class="table-secondary">
          <th scope="col">Ações</th>
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th scope="col">Cost Price</th>
          <th scope="col">Retail Price</th>
        </tr>
      </thead>
      <tbody class="overflow-scroll">
        <% @products.each do |product| %>
          <tr>
            <td><%= render "products/actions_dropdown", product: %></td>
            <td><%= link_to product.name, product %></td>
            <td><%= product.description %></td>
            <td><%= number_to_brl product.cost_price %></td>
            <td><%= number_to_brl product.retail_price %></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="5">
            <nav class="d-flex justify-content-center" aria-label="Page navigation">
              <ul class="pagination mb-0">
                <li class="page-item">
                  <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                  </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                  <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                  </a>
                </li>
              </ul>
            </nav>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
<% end %>
