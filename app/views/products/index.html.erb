<div class="m-2">
  <div
    class="
      d-flex justify-content-between align-items-center p-2 bg-light rounded-top
    "
  >
    <div class="">
      <%= search_form_for @q, class: "d-flex gap-3", data: { controller: "search", "turbo-frame": "products" } do |f| %>
        <%= f.search_field :name_cont,
                       class: "form-control",
                       data: {
                         action: "input->search#debouncedSubmit",
                       },
                       placeholder: "Pesquisar" %>

        <button class="btn btn-primary">
          <i class="bi bi-search"></i>
        </button>
      <% end %>
    </div>

    <div colspan="3" class="text-end">
      <%= link_to "Novo Produto", new_product_path, class: "btn btn-primary" %>
      <button
        class="btn btn-secondary"
        type="button"
        data-bs-toggle="offcanvas"
        data-bs-target="#offcanvasFilter"
        aria-controls="offcanvasFilter"
      >
        Filtrar
      </button>
    </div>
  </div>
  <%= turbo_frame_tag "products", target:"_top" do %>
    <div
      class="table-responsive rounded-bottom"
      style="max-height: calc(100vh - 120px);"
    >
      <table class="table table-hover m-0">
        <thead>
          <tr class="table-secondary">
            <th scope="col">Ações</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Cost Price</th>
            <th scope="col">Retail Price</th>
          </tr>
        </thead>
        <tbody style="max-height: 400px; overflow-y: auto;">
          <% @products.each do |product| %>
            <tr>
              <td><%= render "products/actions_dropdown", product: %></td>
              <td><%= link_to product.name, product, class: "" %></td>
              <td><%= product.description %></td>
              <td><%= number_to_brl product.cost_price %></td>
              <td><%= number_to_brl product.retail_price %></td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="5">
              <nav class="d-flex justify-content-center" aria-label="Page navigation">
                <ul class="pagination pagination-sm mb-0">
                  <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                      <span aria-hidden="true">&laquo;</span>
                    </a>
                  </li>
                  <li class="page-item"><a class="page-link" href="#">1</a></li>
                  <li class="page-item"><a class="page-link" href="#">2</a></li>
                  <li class="page-item"><a class="page-link" href="#">3</a></li>
                  <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                      <span aria-hidden="true">&raquo;</span>
                    </a>
                  </li>
                </ul>
              </nav>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>
  <% end %>
</div>

<%# Offcanvas Filtrar Produtos %>
<div
  class="offcanvas offcanvas-end"
  tabindex="-1"
  id="offcanvasFilter"
  aria-labelledby="offcanvasFilterLabel"
>
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasFilterLabel">Offcanvas</h5>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="offcanvas"
      aria-label="Close"
    ></button>
  </div>
  <div class="offcanvas-body">
    <div>
      Aqui serão os filtros
    </div>
    <div class="dropdown mt-3">
      <button
        class="btn btn-secondary dropdown-toggle"
        type="button"
        data-bs-toggle="dropdown"
      >
        Dropdown button
      </button>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="#">Action</a></li>
        <li><a class="dropdown-item" href="#">Another action</a></li>
        <li><a class="dropdown-item" href="#">Something else here</a></li>
      </ul>
    </div>
  </div>
</div>
