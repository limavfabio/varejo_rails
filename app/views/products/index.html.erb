<div class="p-2 vh-100 overflow-y-scroll">
  <div
    class="
      d-flex justify-content-between align-items-center p-2 bg-light rounded-top
    "
  >
    <%= render "shared/search_form", table_frame_id: "products" %>

    <div colspan="3" class="text-end">
      <%= link_to "Novo Produto", new_product_path, class: "btn btn-primary" %>
      <button
        class="btn btn-secondary"
        type="button"
        data-bs-toggle="offcanvas"
        data-bs-target="#offcanvasFilter"
        aria-controls="offcanvasFilter"
      >
        Filtrar
      </button>
    </div>
  </div>
  <%= render "shared/table", table_frame_id: "products" %>
</div>

<%# Offcanvas Filtrar Produtos %>
