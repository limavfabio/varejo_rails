<%= form_with(model: @product) do |form| %>
  <div class="overflow-y-auto vh-100 px-2" style="padding-bottom: 54px;">
    <div class="d-flex flex-column gap-2 mb-2">
      <h2 class="">Detalhes do Produto</h2>

      <% tabs = [
        { title: "Detalhes", href: "/products/#{@product.id}" },
        { title: "Estoque", href: "/products/#{@product.id}/stock" },
      ] %>
      <%= render "shared/tabs_group", tabs: %>
      <!-- Customer Information -->
      <div class="card">
        <div class="card-header">
          Informações do Produto
        </div>
        <div class="card-body">
          <div class="mb-3">
            <%= form.label :name, class: "form-label" %>
            <%= form.text_field :name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :description, class: "form-label" %>
            <%= form.textarea :description, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :cost_price, class: "form-label" %>
            <%= form.number_field :cost_price, step: "0.01", min: "0", class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :retail_price, class: "form-label" %>
            <%= form.number_field :retail_price, step: "0.01", min: "0", class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <%= render "products/footer", form: %>
  </div>
<% end %>
